# check cycles, and generate image for REED.tex
norefs

# illustrate cycles for the REED paper....

layout (
	(1a 2a 3a 4a) 
	(1b 2b 3b 4b)
	(1c 2c 3c 4c)  
) 

Evidence -> 1a
Evidence -> 2a
Evidence -> 3a
Evidence -> 4a

new style setfont is "fontname=\"Helvetica\""
new style normal is "setfont;fontcolor=\"black\";fillcolor=\"gray90\";style=\"filled\";label=<"
new style warn is "setfont;label=<"
new style middle  is "<FONT POINT-SIZE='10'><SUB>"
new style end is "</SUB></FONT>>"

1a -> 1b -> 1c -> 1a
style 1a is "warn A middle 1 end"
style 1b is "warn B middle 1 end"
style 1c is "warn C middle 1 end"

2a -> 2b -> 2c; 2a -> 2c
style 2a is "normal A middle 2 end"
style 2b is "normal B middle 2 end"
style 2c is "normal C middle 2 end"

3a -> 3b -> 3c; 3c -> 3b
style 3a is "normal A middle 3 end"
style 3b is "warn B middle 3 end"
style 3c is "warn C middle 3 end"

4a -> 4b -> 4c <- 4b
style 4a is "normal A middle 4 end"
style 4b is "normal B middle 4 end"
style 4c is "normal C middle 4 end"

1c -> Conclusions
2c -> Conclusions
3c -> Conclusions
4c -> Conclusions

style Evidence is setfont
style Conclusions is setfont
